<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/aa"
        android:text="首页"
        android:textColor="#000"
        android:textSize="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:background="#F0DDD7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.bawei.zhangboyi1216.view.zhidingyi.FlowLayout
        android:id="@+id/flow"
        app:myColor="#fff"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.bawei.zhangboyi1216.view.zhidingyi.FlowLayout>

    <TextView
        android:id="@+id/text_title"
        android:text="| 热门专基"
        android:layout_below="@+id/aa"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_sou"
        android:text="换一批"
        android:layout_below="@id/aa"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageview"
        android:src="@drawable/wuwang"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>